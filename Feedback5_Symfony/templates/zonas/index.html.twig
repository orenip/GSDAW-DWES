{% extends 'base.html.twig' %}

{% block title %}Zonas index{% endblock %}

{% block body %}
    <h1>Zonas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>COD_ZONA</th>
                <th>NOMBRE_ZONA</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zona in zonas %}
            <tr>
                <td>{{ zona.COD_ZONA }}</td>
                <td>{{ zona.NOMBRE_ZONA }}</td>
                <td>
                    <a href="{{ path('app_zonas_show', {'COD_ZONA': zona.COD_ZONA}) }}">show</a>
                    <a href="{{ path('app_zonas_edit', {'COD_ZONA': zona.COD_ZONA}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_zonas_new') }}">Create new</a>
{% endblock %}
