<!DOCTYPE html>

<title>Jugadores index</title>

{% block body %}
    <h1>Jugadores index</h1>
    <nav>
        <ul>
            <a href="{{ path('app_equipos_index') }}">Equipos</a>
            <a href="{{ path('app_partidos_index') }}">Partidos</a>
            <a href="{{ path('app_jugadores_index') }}">Jugadores</a>
            <a href="{{ path('app_zonas_index') }}">Zonas</a>
        </ul>
    </nav>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NOMBRE_JUGADOR</th>
                <th>FECHA_NACIMIENTO</th>
                <th>ESTATURA</th>
                <th>POSICION</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for jugadore in jugadores %}
            <tr>
                <td>{{ jugadore.id }}</td>
                <td>{{ jugadore.NOMBREJUGADOR }}</td>
                <td>{{ jugadore.FECHANACIMIENTO ? jugadore.FECHANACIMIENTO|date('Y-m-d') : '' }}</td>
                <td>{{ jugadore.ESTATURA }}</td>
                <td>{{ jugadore.POSICION }}</td>
                <td>
                    <a href="{{ path('app_jugadores_show', {'id': jugadore.id}) }}">show</a>
                    <a href="{{ path('app_jugadores_edit', {'id': jugadore.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_jugadores_new') }}">Create new</a>
{% endblock %}
